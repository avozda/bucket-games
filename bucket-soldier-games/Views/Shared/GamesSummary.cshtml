@model Game

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.Img" alt="thumbnail" />
        <div class="caption">

            <h3 class="pull-right">
                <a asp-controller="Game" asp-action="Details" asp-route-gameId="@Model.id">@Model.Title</a>
            </h3>
            <h3>Price: $@Model.Price.ToString()</h3>
            <p>@Model.CategoryId</p>
            <p>@Model.ShortDesc</p>
        </div>
        <div class="addToCart text-right">
            <p class="button">
                <a class="btn btn-success" id="cardButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-gameId="@Model.id">
                    Add To Cart
                </a>
            </p>
        </div>

    </div>
</div> 