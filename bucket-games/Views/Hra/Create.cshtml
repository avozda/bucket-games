@model bucket_games.Models.Hra

@{
	ViewData["Title"] = "Vytvořit nový produkt";
}

<h1>Vytvoření nové hry</h1>

<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Název" class="control-label"></label>
				<input asp-for="Název" class="form-control" type="text" />
				<span asp-validation-for="Název" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Datum" class="control-label"></label>
				<input asp-for="Datum" class="form-control" />
				<span asp-validation-for="Datum" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Žánr" class="control-label"></label>
				<input asp-for="Žánr" class="form-control" />
				<span asp-validation-for="Žánr" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Cena" class="control-label"></label>
				<input asp-for="Cena" class="form-control" />
				<span asp-validation-for="Cena" class="text-danger"></span>
			</div>
			<div class="form-group">
				@Html.EditorFor(model => model.Fotka, new { htmlAttributes = new { @class = "form-control", @type = "file" } })
				@Html.ValidationMessageFor(model => model.Fotka, "", new { @class = "text-danger" })
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10 text-success">
			@ViewBag.FileStatus
		</div>
	</div>
	<a asp-action="Index">Zpátky na seznam</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
